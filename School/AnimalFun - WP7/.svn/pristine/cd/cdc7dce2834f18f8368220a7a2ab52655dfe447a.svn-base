        public MainPage()
        {
            InitializeComponent();
        }

        // Handle a tap on the button for Learning
        void Button_Learning_Click(object sender, RoutedEventArgs e)
        {
            //this line is what navigates to the specific page
            this.NavigationService.Navigate(new Uri("/AnimalMath;component/AnimalView/LearningPage.xaml", UriKind.Relative));
        }

        // Handle a tap on the button for Spelling
        void Button_Spelling_Click(object sender, RoutedEventArgs e)
        {
            //this line is what navigates to the specific page
            this.NavigationService.Navigate(new Uri("/AnimalMath;component/AnimalView/SpellingPage.xaml", UriKind.Relative));
        }

        // Handle a tap on the button for Math
        void Button_Math_Click(object sender, RoutedEventArgs e)
        {
            //this line is what navigates to the specific page
            this.NavigationService.Navigate(new Uri("/AnimalMath;component/AnimalView/MathPage.xaml", UriKind.Relative));
        }
    }
}



